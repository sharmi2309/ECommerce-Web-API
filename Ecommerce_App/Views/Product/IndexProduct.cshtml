@model IEnumerable<web_app.Models.ItemsDTO>
<br />
<div class="container p-4 border">
    <div class="row p-2">
        <div class="col">
            <h1 class="text-primary">ITEM LIST</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Product" asp-action="CreateProduct" class="btn btn-outside primary"><i class="bi bi-plus-circle-fill"></i> Create New Product </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Occupancy</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var items in Model)
            {
                <tr>
                    <td>@items.Name</td>
                    <td>@items.Occupancy</td>
                    <td>@((items.rate).ToString("c"))</td>
                    <td>
                        <a asp-controller="Villa" asp-action="UpdateVilla" asp-route-villaId="@items.id" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Villa" asp-action="DeleteVilla" asp-route-villaId="@items.id" class="btn btn-danger"><i class="bi bi-trash3-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
